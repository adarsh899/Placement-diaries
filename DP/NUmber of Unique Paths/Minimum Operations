#define all(x) x.begin(),x.end()
//#define  unordered_map<l,l>  u;
#define MOD1 1000000007
l solve(l n)
{
    l dp[n+1];
    dp[0]=0;
    dp[1]=1;
    for(l i=2;i<=n;i++)
    {
        if(i%2==0)
            dp[i] = min(dp[i/2],dp[i-1])+1;
        else
            dp[i] = dp[i-1]+1;
    }
    return dp[n];

}
int main()
{
   st;
   while(t--)
   {
       l n;
       cin>>n;
       cout<<solve(n)<<"\n";
   }
    return 0;
}
